      Buttons = {
          {
              Title = "Copy",
              Callback = function()
                setclipboard("https://discord.gg/BXsJyXfJZx")
              end
          },
          {
              Title = "Cancel",
              Callback = function()
                  print("Cancelled the dialog.")
              end
          }
      }
  })
  end
})

local Main = Window:AddTab({Title = "", Icon = "home"})

Fluent:Notify({
  Title = "Quantum Hub",
  Content = "The script has been loaded.",
  Duration = 5
})
