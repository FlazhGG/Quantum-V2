local QuantuHub = loadstring(game:HttpGet("https://raw.githubusercontent.com/FlazhGG/Quantum-V2/main/QuantumHubLibrary"))()

local  Window = QuantuHub:MakeWindow({
 
    Title = "Quantum Hub",
    SubTitle = "By: Prime Flazhy",
    SaveFolder = "Quantum Hub.lua"
})

local AFKOptions = {}

local Info = Window:MakeTab({"Info", "info"})

Info:AddDiscordInvite({
    Name = "Quantum Hub",
    Description = "Join our Official discord server, For you to notify updates",
    Logo = "rbxassetid://17542158193",
    Invite = "https://discord.gg/3he5byjKzQ"
})

osfunc = Info:AddLabel({"Time Zone"})

local function UpdateOS()
    local date = os.date("*t")
    local hour = (date.hour) % 24
    local ampm = hour < 12 and "AM" or "PM"
    local timezone = string.format("%02i:%02i:%02i %s", ((hour -1) % 12) + 1, date.min, date.sec, ampm)
    local datetime = string.format("%02d/%02d/%04d", date.day, date.month, date.year)
    local LocalizationService = game:GetService("LocalizationService")
    local Players = game:GetService("Players")
    local player = Players.LocalPlayer
    local name = player.Name
    local result, code = pcall(function()
     return LocalizationService:GetCountryRegionForPlayerAsync(player)
     end)
    osfunc:Set("" .. datetime.." - "..timezone.." [" .. code .. "]")
    end
    spawn(function()
     while true do
     UpdateOS()
     game:GetService("RunService").RenderStepped:Wait()
     end
     end)

     Time = Info:AddLabel({"Server Time"})

     function UpdateTime()
        local GameTime = math.floor(workspace.DistributedGameTime+0.5)
        local Hour = math.floor(GameTime/(60^2))%24
        local Minute = math.floor(GameTime/(60^1))%60
        local Second = math.floor(GameTime/(60^0))%60
        Time:Set("Hours : "..Hour.." | Minutes : "..Minute.." | Seconds : "..Second)
    end
    
    spawn(function()
        while task.wait() do
            pcall(function()
                UpdateTime()
            end)
        end
    end)



local Main = Window:MakeTab({"Main", "home"})

local MonsterStatus = Main:AddLabel({""})
local QuestStatus = Main:AddLabel({""})

spawn(function()
    while task.wait() do
    if game:GetService("Players").LocalPlayer.PlayerGui.Main.Quest.Visible == false then
    MonsterStatus:Set("[Monster] : ")
    QuestStatus:Set("[Quest] : ".." | [Level] : ")
    elseif game:GetService("Players").LocalPlayer.PlayerGui.Main.Quest.Visible == true then
    pcall(function()
      CheckQuest()
      MonsterStatus:Set("[Monster] : "..Mon)
      QuestStatus:Set("[Quest] : "..NameQuest.." | [Level] : "..LevelQuest)
      end)
    end
    end
    end)

local ListF = {"Normal", "Auto Quest", "Nearest"}
FarmMode = "Normal"

Main:AddDropdown({
    Name = "Select Farm Mode",
    Options = ListF,
    Default = FarmMode,
    Callback = function(value)
        FarmMode = value
    end
})

local AutoFarm = Main:AddToggle({ Title = "Auto Farm", Description = "Auto farm selected method", Default = false, Callback = function(value)
    _G.AutoFarm = value
    StopTween(_G.AutoFarm)
end

})

